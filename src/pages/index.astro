---
import Layout from "../layouts/Layout.astro";
import Carousel from "../components/Carousel.astro";
import Carousel2 from "../components/Carousel2.astro";
import Carousel3 from "../components/Carousel3.astro";
import CardStyleToggle from "../components/CardStyleToggle.svelte";


function toggleCardStyle() {

}
---

<Layout title="Welcome to Astro.">
	<main>

    <CardStyleToggle client:load>
      <Carousel slot="cards" featured={true} title={"Cards com sombra"} amount={3} category="Frontend" />
      <Carousel2 slot="cards2" featured={true} title={"Cards sem sombra"} amount={3} category="Frontend" />
      <Carousel3 slot="cards3" featured={true} title={"Cards sombra + hover"} amount={3} category="Frontend" />
    </CardStyleToggle>
	</main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
		margin-top: clamp(100px, 20vw, 235px);
    max-width: 1235px;
    width: 100%;

    box-sizing: border-box;

    gap: 100px;
  }

  h1 {
    font-style: normal;
    font-weight: 700;
    font-size: 36px;
  }

  .carousel-wrapper {
    display: flex;
    flex-direction: column;

    gap: 35px;
  }
</style>
